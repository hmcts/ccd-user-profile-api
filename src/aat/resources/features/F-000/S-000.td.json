					}
				},
				"diskSpace": {
					"status": "UP",
					"details": {
						"total": "[[ANY_NUMBER_NOT_NULLABLE]]",
						"free": "[[ANY_NUMBER_NOT_NULLABLE]]",
						"threshold": "[[ANY_INTEGER_NOT_NULLABLE]]",
			            "exists" : true
					}
				},
				"livenessState": {
					"status": "UP"
				},
				"ping": {
					"status": "UP"
				},
			    "readinessState" : {
			        "status" : "UP"
			    },
				"refreshScope": {
					"status": "UP"
				}
			},
			"groups" : [ "liveness", "readiness" ]
		}
	}
